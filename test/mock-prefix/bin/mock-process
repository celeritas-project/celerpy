"""Mock a 'JSON lines' style process.

"""
import json
import signal
import sys

def log(*args):
    print("<child>", *args, file=sys.stderr, flush=True)

def dump(obj, file=sys.stdout):
    try:
        json.dump(obj, file)
        file.write('\n')
        file.flush()
    except BrokenPipeError as e:
        log(e)

def terminate(signum, frame):
    log("caught signal", signum)
    sys.exit(signum)

def read_input():
    try:
        return json.loads(input())
    except EOFError:
        log("EOF during input read")
        return None

signal.signal(signal.SIGINT, terminate)
signal.signal(signal.SIGTERM, terminate)

cmd = input()
log("read command", repr(cmd))
dump("success")
log("entering loop")
while (cmd := read_input()) != None:
    log("read command", cmd)
    if cmd == "abort":
        log("Aborting!")
        sys.exit(1)
    dump(["success", cmd])
dump("closing")
log("sent closing message, exiting")
